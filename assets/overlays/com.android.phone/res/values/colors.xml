<resources>

    <!-- Settings screen should use the same colors as the Dialer -->
    <color name="phone_settings_background_color">@android:color/black</color>

    <!-- Color for the setting text. -->
    <color name="setting_primary_color">#ffffff</color>
    <!-- Color for the setting description text. -->
    <color name="setting_secondary_color">#b3ffffff</color>

    <color name="network_operators_color_primary">@color/settings_color_primary</color>
    <color name="network_operators_color_primary_dark">@color/settings_color_primary_dark</color>

    <!-- Colors for the dialpad -->
    <color name="background_dialpad">@*android:color/material_blue_grey</color>
    <color name="background_dialpad_pressed">?android:attr/colorControlHighlight</color>
    <color name="dialpad_secondary_text_color">#b3ffffff</color>
    <color name="dialpad_digits_text_color">#ffffff</color>
    <color name="dialpad_separator_line_color">#1fffffff</color>
    <color name="dialpad_icon_tint">#ffffff</color>
    <color name="dialpad_voicemail_tint">@color/dialpad_secondary_text_color</color>

    <color name="settings_color_primary">@android:color/black</color>
    <color name="settings_color_primary_dark">@android:color/black</color>
    <color name="settings_color_accent">@*android:color/material_blue_500</color>

</resources>

